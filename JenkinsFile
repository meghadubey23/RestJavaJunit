pipeline {
    agent any

    tools {
        maven 'maven 3.9.3'  // <-- This name must match exactly what you set in Jenkins Global Tools
    }

    triggers {
        // Runs nightly at 2 AM
        cron('H/15 * * * *')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/meghadubey23/rest-java-junit.git'
            }
        }

        stage('Build and Run Smoke Tests') {
            steps {
                sh 'mvn clean test -Dgroups=smoke'
            }
            post {
                always {
                    // Will look for JUnit (or TestNG) XML results
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
}
